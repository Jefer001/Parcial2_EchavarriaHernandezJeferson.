@model TicketSystem_Concert.DAL.Entities.Ticket
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group mb-3">
        <label asp-for="Id" class="input-group-text"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="IsUsed" class="input-group-text"></label>
        <select asp-for="IsUsed" class="form-select">
                <option value="false">No</option>
                <option value="true">Si</option>
            <span asp-validation-for="IsUsed" class="text-danger"></span>
        </select>
    </div>
    <br />
    <div class="input-group">
        <label asp-for="EntranceGate" class="input-group-text"></label>
        <select asp-for="EntranceGate" class="form-select">
            <option selected>Seleccione</option>
            <option value="Norte">Norte</option>
            <option value="Sur">Sur</option>
            <option value="Oriental">Oriental</option>
            <option value="Occidental">Occidental</option>
            <span asp-validation-for="EntranceGate" class="text-danger"></span>
        </select>
    </div>
    


    
    
  